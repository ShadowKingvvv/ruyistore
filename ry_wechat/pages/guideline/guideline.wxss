/* pages/guideline/guideline.wxss */
.hospitalPhoto{
  width:100%;
  height: 463px;
}
.hospital_floor{
  background: #F8F8F8;
  position: fixed;
  bottom: 0px;
  width: 100%;
}
.floor_number{
  height: 50px;
  align-items: center;
  justify-content:center;
  display: flex;
  border-bottom: solid thin #e0e5e0;
  border-right: solid thin #e0e5e0;
}
.build_number{
  height: 50px;
  display: flex;
  align-items: center;
  justify-content:center;
}
.floor{
  font-size: 18px;
}
.dept_search{
  display: flex;
  height: 40px;
  margin-left: 20px;
  margin-right: 20px;
  align-items: center;
  justify-content: center;
}
.search_name{
  background-color:#f1f6f0;
  padding-left:5px;
  border:1px solid #f1f6f0;
  font-size:14px;
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
 
.modalDlg{
    width: 580rpx;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
